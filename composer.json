{
  "name": "imponeer/criteria",
  "description": "Small library for building database criteria strings",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Raimondas Rimkevičius",
      "email": "github@mekdrop.name"
    }
  ],
  "require": {
    "php": ">=8.3"
  },
  "autoload": {
    "psr-4": {
      "Imponeer\\Database\\Criteria\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Imponeer\\Database\\Criteria\\Tests\\": "tests/"
    }
  },
  "keywords": [
    "database",
    "criteria",
    "xoops"
  ],
  "scripts": {
    "test": "phpunit --testdox",
    "phpstan": "phpstan analyse",
    "phpcs": "vendor/bin/phpcs",
    "phpcbf": "vendor/bin/phpcbf"
  },
  "require-dev": {
    "phpunit/phpunit": "^12",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.13 || ^4.0",
    "fakerphp/faker": "^1.24"
  }
}
